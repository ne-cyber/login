<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    login
    method: <%= method %> <br>
    action: <%= url %> <br>
    queryObj: <%= JSON.stringify(queryObj) %> <br>
    postObj: <%= JSON.stringify(postObj) %>

    <form method="<%= method %>" action="<%= url %>">
        <!-- from query string -->
        <% for(let k in queryObj) { %>
            <% if (k === 'user' || k === 'password') { %>
                <% continue %> 
            <% } %> 
            <input type="hidden" name="<%= k %>" value="<%= queryObj[k] %>">   
        <% } %> 
        <!-- end from query string -->
        
        <!-- post string -->
        <% for(let k in postObj) { %>
            <% if (k === 'user' || k === 'password') { %>
                <% continue %> 
            <% } %> 
            <input type="hidden" name="<%= k %>" value="<%= postObj[k] %>">   
        <% } %> 
        <!-- end post string -->
        <!-- user & password -->
        <input type="text" name="user" value="<%= (queryObj['user'] !== undefined) ? queryObj['user'] : '' %>"> <br>
        <input type="password" name="password" value="<%= (queryObj['password'] !== undefined) ? queryObj['password'] : '' %>">
        <!-- end user & password -->
        <input type="submit" value="Переход!">
    </form>
</body>
</html>